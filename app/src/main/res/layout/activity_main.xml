<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/invitations"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/padding_left"
        android:src="@drawable/logo_small" />

    <TextView
        android:id="@+id/description"
        android:layout_below="@id/image"
        android:text="@string/description"
        style="@style/TypoHeader"/>

    <TextView
        android:id="@+id/open"
        android:layout_below="@id/description"
        android:text="@string/working_hours_title"
        style="@style/TypoSubHeader"/>

    <TextView
        android:layout_below="@id/open"
        android:drawableLeft="@drawable/clock"
        android:drawablePadding="@dimen/padding_left"
        android:text="@string/working_hours"
        style="@style/TypoSubHeader"/>

    <ImageView
        android:id="@+id/call"
        android:layout_alignParentLeft="true"
        android:src="@drawable/call"
        style="@style/TypoIcon"/>

    <ImageView
        android:id="@+id/email"
        android:layout_toRightOf="@id/call"
        android:src="@drawable/email"
        style="@style/TypoIcon"/>

    <ImageView
        android:id="@+id/web"
        android:layout_toRightOf="@id/email"
        android:src="@drawable/web"
        style="@style/TypoIcon"/>

    <ImageView
        android:layout_toRightOf="@id/web"
        android:src="@drawable/map"
        style="@style/TypoIcon"/>

    <TextView
        android:layout_above="@id/call"
        android:text="Contact us!"
        style="@style/TypoHeader"/>

</RelativeLayout>


